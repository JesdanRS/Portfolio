---
import SocialLinks from "./SocialLinks.astro";
---

<section class="min-h-screen flex flex-col md:flex-row justify-center items-center text-left px-8 md:px-16 py-20 gap-8 md:gap-16">
  <img src="/src/assets/pfp.png" alt="Foto de perfil de Jesus Imaña" class="w-32 h-32 md:w-48 md:h-48 rounded-full border-4 border-blue-300 shadow-lg object-cover flex-shrink-0" />
  <div class="flex flex-col items-center md:items-start flex-1">
  <h1 class="text-5xl md:text-7xl font-bold text-white mb-2 flex items-center gap-3">
    Hey, I'm Jesus Imaña
    <span class="ml-2 px-3 py-1 bg-blue-300 bg-opacity-20 text-blue-200 text-xs rounded-full font-semibold align-middle">Disponible para Trabajar</span>
  </h1>
  <p class="text-lg md:text-xl text-gray-400 mb-4 max-w-2xl">
    <span class="font-semibold text-yellow-300">Developer Junior</span> 
    <span class="text-blue-200 font-semibold">DevOP Junior</span> y 
    <span class="text-pink-300 font-semibold">QA Junior</span>. 
    De La Paz, Bolivia.<br />
    <span class="text-gray-300">[especialización]</span>
  </p>
  <div class="flex flex-col items-center md:items-start gap-4 w-full mt-6">
    <div>
      <a 
        href="#projects" 
        class="inline-block px-8 py-3 bg-transparent border-2 border-blue-300 text-blue-300 rounded-md hover:bg-blue-300 hover:bg-opacity-10 transition-all duration-300 font-semibold shadow"
      >
        Contactame
      </a>
    </div>
    <SocialLinks />
  </div>
  </div>
</section>