---
import SocialLinks from "./SocialLinks.astro";
import { Image } from "astro:assets";
---

<section class="min-h-screen relative overflow-hidden bg-black flex items-center justify-center">
  <!-- Contenedor principal con dos columnas -->
  <div class="max-w-6xl w-4/5 flex flex-col md:flex-row gap-x-28 items-center justify-between h-full relative z-10">
    <!-- Columna izquierda con texto -->
    <div class="flex flex-col items-start w-full md:w-1/2 text-left">
      <h1 class="text-4xl md:text-6xl font-bold text-white mb-2">
        Hey, I'm Jesus Imaña
        <div class="mt-2">
          <a href="https:/www.linkedin.com/in/jesús-imaña-a09b72246" target="_blank" rel="noopener" class="flex items-center transition md:hover:scale-105"> <div class="flex items-center "> 
            <span class="relative inline-flex overflow-hidden rounded-full p-[1px]">      
              <span class="absolute inset-[-1000%] animate-[spin_2s_linear_infinite] bg-[conic-gradient(from_90deg_at_50%_50%,#2563eb_0%,#38bdf8_40%,#60a5fa_70%,#2563eb_100%)]"></span> <div class="inline-flex items-center justify-center w-full px-3 py-1 text-sm text-blue-800 bg-blue-100 rounded-full cursor-pointer dark:bg-gray-800 dark:text-white/80 backdrop-blur-3xl whitespace-nowrap"> Available to work 
              </div> 
            </span> 
          </div> 
        </a>
        </div>
      </h1>
      <p class="text-base md:text-lg text-gray-400 mb-4 max-w-lg">
        <span class="font-semibold text-yellow-300">Frontend</span>,
        <span class="text-blue-200 font-semibold">Backend</span> and
        <span class="text-pink-300 font-semibold">QA</span>. 
        From La Paz, Bolivia.<br />
        <span class="text-gray-300">FullStack Junior</span>
      </p>
      <div class="flex flex-col items-start gap-4 w-full mt-6">
        <div class="flex gap-5">
          <a 
            href="mailto:imajesus08@gmail.com" 
            class="px-8 py-3 bg-transparent border-2 border-blue-300 text-blue-300 rounded-full hover:bg-blue-300 hover:bg-opacity-10 transition-all duration-300 font-semibold shadow flex items-center gap-2"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 2v.01L12 13 4 6.01V6h16zM4 20V8.99l8 6.99 8-6.99V20H4z"/></svg>
            Contact Me
          </a>
          <a 
            href="/src/assets/JesusImañaResume.pdf" 
            class="inline-block px-8 py-3 bg-transparent border-2 border-white text-white rounded-full hover:bg-white hover:bg-opacity-10 transition-all duration-300 font-semibold shadow"
            download
          >
            Download CV
          </a>
        </div>
        <SocialLinks />
      </div>
    </div>
    
    <!-- Columna derecha con imagen grande -->
    <div class="md:block w-full flex h-screen relative">
      <!-- Aquí irá la imagen que se difumina con el fondo -->
      <!-- Nota: Reemplaza la ruta con tu nueva foto cuando la tengas -->
      <div class="absolute right-0 top-0 h-full w-full overflow-hidden">
        <Image 
          src="/src/assets/profilePicture.jpg" 
          alt="Foto de perfil de Jesus Imaña" 
          class="object-cover h-full w-full opacity-90 scale-100"
          loading="eager"
          width={600}
          height={600}
          fit="cover"
        />
        <!-- Efecto de difuminado con el fondo -->
        <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,transparent_0%,rgba(0,0,0,0.47)_50%,black_90%),linear-gradient(to_right,rgba(0,0,0,0)_80%,rgba(0,0,0,0.85)_100%)] from-transparent via-black/50 to-black"></div>
        <!-- Elementos decorativos como en la imagen de referencia -->
        <div class="absolute inset-0 overflow-hidden">
          <div class="absolute top-1/4 right-1/4 w-64 h-64 border border-gray-700 opacity-30 rotate-45"></div>
          <div class="absolute bottom-1/3 right-1/3 w-32 h-32 border border-gray-700 opacity-20 -rotate-12"></div>
        </div>
      </div>
    </div>
  </div>
</section>